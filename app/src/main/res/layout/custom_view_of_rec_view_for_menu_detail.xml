<?xml version="1.0" encoding="utf-8"?>



<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cardForMenuItem"
    android:layout_width="match_parent"


    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/cart_background_color2"
    app:cardCornerRadius="8dp"

    app:cardElevation="8dp">


    <LinearLayout
        android:id="@+id/linearLayoutForMenuDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"

        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/linearLayoutContainingMenuDetailsTitleAndDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="vertical"


            >

            <TextView
                android:id="@+id/txtItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text="PizzaHut Deal no 1 :"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                />
            <TextView
                android:id="@+id/txtItemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text="Tikka | Fajita | Seekh | Kabab | Pizza Included"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="italic"
                android:layout_marginBottom="6dp"

                />



        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>