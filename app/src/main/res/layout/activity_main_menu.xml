<?xml version="1.0" encoding="utf-8"?>

<LinearLayout


    android:id="@+id/layoutMenuHolder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    android:background="@drawable/background1_bg"


    >

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical|center_horizontal"
    android:padding="32dp"

    >


    <LinearLayout

    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:padding="8dp"
>




    <android.support.v7.widget.CardView

        android:id="@+id/cardViewForDawatMenu"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="120dp"


        app:cardBackgroundColor="@color/cart_background_color1"
        app:cardElevation="4dp"
        android:layout_margin="8dp"

        >



        <ImageView
            android:id="@+id/imgInCardViewOfDawatMenu"
            android:layout_gravity="top|left"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/cart_rightside_image"
            />

        <LinearLayout
            android:id="@+id/LinearLayoutForTextHolderOfDawatMenuUpperLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/LinearLayoutForTextHolderOfDawatMenuMainLayout"
                android:orientation="vertical"
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"


                >

                <TextView
                    android:id="@+id/txtTitleOfDawatMenu"
                    android:textColor="@color/white"
                    android:text="DAWAT"
                    android:textSize="15sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtDescriptionOfDawatMenu"
                    android:text="Menu"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:textStyle="italic"

                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>




        </LinearLayout>

    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView

        android:id="@+id/cardViewForLunchBoxesMenu"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="120dp"


        app:cardBackgroundColor="@color/cart_background_color2"
        app:cardElevation="4dp"
        android:layout_margin="8dp"

        >



        <ImageView
            android:id="@+id/imgInCardViewOfLunchBoxMenu"
            android:layout_gravity="top|left"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/cart_rightside_image"
            />

        <LinearLayout
            android:id="@+id/LinearLayoutForTextHolderOfLunchBoxMenuUpperLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/LinearLayoutForTextHolderOfLunchBoxMenuMainLayout"
                android:orientation="vertical"
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"


                >

                <TextView
                    android:id="@+id/txtTitleOfLunchBoxMenu"
                    android:textColor="@color/white"
                    android:text="LUNCH BOX"
                    android:textSize="15sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtDescriptionOfLunchBoxMenu"
                    android:text="Menu"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:textStyle="italic"

                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>




        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>

    <LinearLayout

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:padding="8dp"
        >




        <android.support.v7.widget.CardView

            android:id="@+id/cardViewForBuzurgMenu"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="120dp"


            app:cardBackgroundColor="@color/cart_background_color2"
            app:cardElevation="4dp"
            android:layout_margin="8dp"

            >



            <ImageView
                android:id="@+id/imgInCardViewOfBuzurgMenu"
                android:layout_gravity="top|left"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/cart_rightside_image"
                />

            <LinearLayout
                android:id="@+id/LinearLayoutForTextHolderOfBuzurgMenuUpperLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/LinearLayoutForTextHolderOfBuzurgMenuMainLayout"
                    android:orientation="vertical"
                    android:layout_weight="9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"


                    >

                    <TextView
                        android:id="@+id/txtTitleOfBuzurgMenu"
                        android:textColor="@color/white"
                        android:text="Buzurg"
                        android:textSize="15sp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtDescriptionOfBuzurgMenu"
                        android:text="Menu"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:textStyle="italic"

                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>




            </LinearLayout>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView

            android:id="@+id/cardViewForCateringMenu"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="120dp"


            app:cardBackgroundColor="@color/cart_background_color1"
            app:cardElevation="4dp"
            android:layout_margin="8dp"

            >



            <ImageView
                android:id="@+id/imgInCardViewOfCateringMenu"
                android:layout_gravity="top|left"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/cart_rightside_image"
                />

            <LinearLayout
                android:id="@+id/LinearLayoutForTextHolderOfCateringMenuUpperLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/LinearLayoutForTextHolderOfCateringMenuMainLayout"
                    android:orientation="vertical"
                    android:layout_weight="9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"


                    >

                    <TextView
                        android:id="@+id/txtTitleOfCateringMenu"
                        android:textColor="@color/white"
                        android:text="Catering"
                        android:textSize="15sp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtDescriptionOfCateringLunchBoxMenu"
                        android:text="Menu"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:textStyle="italic"

                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>




            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>


</LinearLayout>
























</LinearLayout>