<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    app:cardBackgroundColor="@color/cart_background_color2"
    app:cardElevation="4dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:padding="90dp"
    >


    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:orientation="vertical"
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >
            <LinearLayout
                android:id="@+id/LinearLayout3"
                android:orientation="horizontal"
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                >
                <TextView
                    android:id="@+id/txtItemName"
                    android:textColor="@color/white"
                    android:text="desi Tarka"
                    android:textSize="14sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_gravity="right|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    />

                <TextView
                    android:id="@+id/txtSeeOrderDetail"
                    android:textColor="@color/cart_background_color1"
                    android:text="Quantity : 14"
                    android:textSize="10sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:layout_gravity="right|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"


                    />


            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/imgInCart"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="0dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cart_rightside_image"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>